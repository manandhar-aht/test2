<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>Water Infrastructure Analysis API</display-name>
    <description>JavaEE REST API for water infrastructure feature analysis</description>
    
    <!-- Enable CDI -->
    <context-param>
        <param-name>javax.enterprise.context.conversation.enabled</param-name>
        <param-value>true</param-value>
    </context-param>
    
    <!-- CORS Configuration -->
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>com.waterresources.api.CorsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>
    
    <!-- REST Configuration -->
    <servlet>
        <servlet-name>RestApplication</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>com.waterresources.api.RestApplication</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>RestApplication</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>
    
    <!-- Database Configuration -->
    <resource-ref>
        <description>PostgreSQL Database</description>
        <res-ref-name>jdbc/WaterResourcesDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>